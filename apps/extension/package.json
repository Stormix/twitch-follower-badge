{
  "name": "@twitch-stalker/extension",
  "displayName": "Twitch Follower Badge",
  "version": "0.0.6",
  "description": "An extension that allows you to see if someone follows you on twitch right on their profile.",
  "author": "Stormix <hello@stormix.dev>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "@sentry/browser": "^9.1.0",
    "axios": "^1.7.9",
    "date-fns": "^4.1.0",
    "plasmo": "0.90.3",
    "puro": "^0.8.4",
    "radix-ui": "^1.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.4.0",
    "tailwindcss-font-inter": "^4.0.0",
    "type-fest": "^4.34.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@twitch-stalker/eslint-config": "workspace:*",
    "@twitch-stalker/typescript-config": "workspace:*",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.2",
    "prettier": "3.2.4",
    "tailwindcss": "3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://twitch.tv/*"
    ],
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "identity",
      "identity.email"
    ]
  },
  "packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a"
}
